<!DOCTYPE html>
<html>
<head>
  <title>Nuevo Itinerario</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .container {
      max-width: 600px; /* Ajusta el ancho máximo según sea necesario */
      margin: 0 auto;
    }
    .form-group {
      margin-bottom: 20px;
    }
    label {
      font-weight: bold;
      margin-bottom: 5px;
      display: block;
    }
    select, .btn {
      width: 100%;
      padding: 10px;
      border-radius: 4px;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }
    .btn-primary {
      background-color: #007bff;
      color: white;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mt-4">Crear Nuevo Itinerario</h1>

    <%= form_with(model: @itinerary, local: true) do |form| %>

        <div class="form-group">
            <%= form.label :status, 'Categoria' %>
            <%= form.select :status, status_options, prompt: 'Selecciona qué serás', class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= form.label :day, 'Dia de la semana' %>
            <%= form.select :day, day_options, prompt: 'Selecciona un día', class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= form.label :h_start, 'Hora de inicio' %>
            <%= form.select :h_start, hour_options, prompt: 'Selecciona una hora de inicio', class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= form.label :h_end, 'Hora de llegada' %>
            <%= form.select :h_end, hour_options, prompt: 'Selecciona una hora de fin', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :starting_place_id, 'Lugar de inicio' %>
          <%= form.collection_select :starting_place_id, @places, :id, :name, prompt: 'Selecciona el lugar de inicio', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :ending_place_id, 'Lugar de fin' %>
          <%= form.collection_select :ending_place_id, @places, :id, :name, prompt: 'Selecciona el lugar de fin', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.submit 'Crear Itinerario', class: 'btn btn-primary' %>
        </div>
      <% end %>
  </div>

  <%= render 'shared/navbar' %>

  <div class="container mt-4">
    <%= yield %>
  </div>
</body>
</html>
