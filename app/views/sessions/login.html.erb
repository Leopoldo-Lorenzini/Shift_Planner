<div class="container">
  <h1>Iniciar sesión</h1>

  <%= form_with url: login_path do |form| %>
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.text_field :email, class: "form-control", name: 'user[email]' %>
    </div>
    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control", name: 'user[password]' %>
    </div>
    <div class="mb-3">
      <%= form.submit "Iniciar sesión", class: "btn btn-primary" %>
    </div>
  <% end %>
  <p>No tienes una cuenta? <%= link_to "Regístrate aquí", new_user_path %></p>
</div>




